<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TW.UI.Pages.PlaylistsPage"
             xmlns:viewmodel="clr-namespace:TW.UI.Pages"
             x:DataType="viewmodel:PlaylistsPage"
             xmlns:model="clr-namespace:TW.UI.Models"
             >
    
    <Shell.TitleView>
        <Grid ColumnDefinitions="0.33*,0.33*,0.33*"
              RowDefinitions="*">
            <Button Text="Spotify"
                    FontSize="13"
                    TextColor="Black"
                    x:Name="spotifyButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="0"
                    Grid.Row="0"
                    Clicked="OnSpotifyButtonClicked"
                    ></Button>
            <Button Text="Youtube"
                    FontSize="13"
                    TextColor="Black" 
                    x:Name="youtubeButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="1"
                    Grid.Row="0"
                    Clicked="OnYoutubeButtonClicked"
                    ></Button>
            <Button Text="Local" 
                    x:Name="localButton"
                    FontSize="13"
                    TextColor="Black"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="2"
                    Grid.Row="0"
                    Clicked="OnLocalButtonClicked"
                    ></Button>
        </Grid>
    </Shell.TitleView>
    <StackLayout BackgroundColor="White">
        <CollectionView x:Name="listView"
                  ItemsSource="{Binding DisplayedPlaylists}"
                  IsGrouped="True"
                  Margin="10"
                  SelectionChanged="OnSelectionChanged">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate  x:DataType="model:PlaylistDisplayGroup">
                    <HorizontalStackLayout BackgroundColor="LightGray">
                        <Image Source="{Binding ImageSource}"
                                   Margin="10"></Image>
                        <Label
                               FontAttributes="Bold"
                               Padding="10"
                               Text="{Binding Name}"></Label>

                        <ImageButton x:DataType="model:PlaylistDisplayTrack" Source="{Binding MenuImageSource }"></ImageButton>
                    </HorizontalStackLayout>
                </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:PlaylistDisplayTrack">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}"></Label>
                        <Label Text="{Binding Artists}"></Label>
                    </VerticalStackLayout>
                </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </StackLayout>
</ContentPage>