<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TW.UI.Pages.YoutubePlaylistsPage"
             Title="YoutubePlaylistsPage"
             xmlns:viewmodel="clr-namespace:TW.UI.Pages"
             x:DataType="viewmodel:YoutubePlaylistsPage"
             xmlns:model="clr-namespace:TW.UI.Services.Youtube">
    <StackLayout>
        <ListView x:Name="listView"
                  VerticalOptions="FillAndExpand"
                  ItemsSource="{Binding YoutubePlaylists}"
                  IsGroupingEnabled="True">
             
            <ListView.GroupHeaderTemplate>
                <DataTemplate x:DataType="model:YoutubePlaylistModel">
                    <ViewCell>
                        <Label Text="{Binding Name}"
                               BackgroundColor="LightGray"
                               FontSize="18"
                               FontAttributes="Bold"
                               Padding="10"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:YoutubeTrackModel">
                    <TextCell Text="{Binding Name}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>