                     Ba></ToolbarItem>
        <ToolbarItem Text="Spotify"></ToolbarItem>
        <ToolbarItem Text="Local"></ToolbarItem>
    </ContentPage.ToolbarItems>-->
    <Shell.TitleView>
        <Grid ColumnDefinitions="0.33*,0.33*,0.33*"
              RowDefinitions="*">
            <Button Text="Spotify"
                    FontSize="13"
                    TextColor="Black"
                    x:Name="spotifyButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="0"
                    Grid.Row="0"
                    Clicked="SpotifyButtonClicked"
                    ></Button>
            <Button Text="Youtube"
                    FontSize="13"
                    TextColor="Black" 
                    x:Name="youtubeButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="1"
                    Grid.Row="0"
                    Clicked="YoutubeButtonClicked"
                    ></Button>
            <Button Text="Local" 
                    FontSize="13"
                    TextColor="Black"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="2"
                    Grid.Row="0"
                    Clicked="LocalButtonClicked"
                    ></Button>
        </Grid>
    </Shell.TitleView>
    <StackLayout BackgroundColor="White">
        <!--<CollectionView ItemsSource="{Binding DisplayedSpotifyPlaylists}"
                        IsGrouped="True"
                        BackgroundColor="Wheat">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="model:SpotifyPlaylistGroup">
                    <Label Text="{Binding Name}"></Label>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:SpotifyTrackView">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}"></Label>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->

        <!--<Label 
            Text="Playlists Page"
            HorizontalOptions="Center" />-->
    <ListView ItemsSource="{Binding DisplayedSpotifyPlaylists}"
                  IsGroupingEnabled="True"
                  Margin="10">
        <ListView.GroupHeaderTemplate>
            <DataTemplate x:DataType="model:SpotifyPlaylistGroup">
                    <ViewCell>
                        <Label BackgroundColor="LightGray"
                               FontAttributes="Bold"
                               Padding="10"
                               Text="{Binding Name}"></Label>
                    </ViewCell>
                </DataTemplate>
        </ListView.GroupHeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:SpotifyTrackView">
                <TextCell Text="{Binding Name}"
                              Detail="{Binding Artists}">

                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>