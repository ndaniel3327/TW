<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TW.UI.Pages.PlaylistsPage"
             xmlns:viewmodel="clr-namespace:TW.UI.Pages"
             x:DataType="viewmodel:PlaylistsPage"
             xmlns:model="clr-namespace:TW.UI.Models">
    <!-->
    <ContentPage.Resources>
        <MenuFlyout x:Key="songMenuFlyout">
            <MenuFlyoutItem Text="Red"></MenuFlyoutItem>
            <MenuFlyoutItem Text="Green"></MenuFlyoutItem>
        </MenuFlyout>
    </ContentPage.Resources>-->

    <Shell.TitleView>
        <Grid ColumnDefinitions="0.33*,0.33*,0.33*"
              RowDefinitions="*">
            <Button Text="Spotify"
                    FontSize="13"
                    TextColor="Black"
                    x:Name="spotifyButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="0"
                    Grid.Row="0"
                    Clicked="OnSpotifyButtonClicked"
                    ></Button>
            <Button Text="Youtube"
                    FontSize="13"
                    TextColor="Black" 
                    x:Name="youtubeButton"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="1"
                    Grid.Row="0"
                    Clicked="OnYoutubeButtonClicked"
                    ></Button>
            <Button Text="Local" 
                    x:Name="localButton"
                    FontSize="13"
                    TextColor="Black"
                    HorizontalOptions="End"
                    BackgroundColor="White"
                    WidthRequest="80"
                    HeightRequest="40"
                    Margin="10,10,10,10"
                    Grid.Column="2"
                    Grid.Row="0"
                    Clicked="OnLocalButtonClicked"
                    ></Button>
        </Grid>
    </Shell.TitleView>
    <ScrollView BackgroundColor="White">
        <CollectionView 
                        x:Name="listView"
                  ItemsSource="{Binding DisplayedPlaylists}"
                  IsGrouped="True"
                  Margin="10"
                        SelectionMode="Single"
                  SelectionChanged="OnSelectionChanged"
                        
                        VerticalScrollBarVisibility="Always"
                        SelectedItem="{Binding SelectedItem}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate  x:DataType="model:PlaylistDisplayGroup">
                        <HorizontalStackLayout BackgroundColor="LightGray" HeightRequest="50">
                            <Image Source="{Binding ImageSource}"
                                   Margin="10" ></Image>
                            <Label
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Padding="10"
                               Text="{Binding Name}"></Label>

                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:Name="dataTemplate" x:DataType="model:PlaylistDisplayTrack">
                    <Grid ColumnDefinitions="0.9*,0.1*" 
                          MinimumHeightRequest="60"
                          x:DataType="viewmodel:PlaylistsPage" >
                        <VerticalStackLayout  x:DataType="model:PlaylistDisplayTrack" 
                                              Padding="5" 
                                              VerticalOptions="Center" 
                                              Grid.Column="0">
                            <Label Text="{Binding Name}" FontSize="15"></Label>
                            <Label Text="{Binding Artists}" FontSize="13"></Label>
                        </VerticalStackLayout>
                        <ImageButton x:DataType="model:PlaylistDisplayTrack"
                                     IsVisible="{Binding IsSelected}"
                                     Clicked="menuButton_Clicked" 
                                     Source="menuicon.svg" 
                                     HeightRequest="70"
                                     Grid.Column="1"
                                     Padding="5">
                        </ImageButton>
                        <!--<VerticalStackLayout ZIndex="100"
                                             x:Name="myMenu"
                                             x:DataType="model:PlaylistDisplayTrack"
                                             IsVisible="{Binding MenuIsVisible}"
                                             Grid.Column="0"
                                             Grid.Row="1">
                            <Button Text="Btn1" TextColor="Black" BackgroundColor="Transparent"></Button>
                            <Button Text="Btn2" TextColor="Black" BackgroundColor="Transparent"></Button>
                            <Button Text="Btn3" TextColor="Black" BackgroundColor="Transparent"></Button>

                        </VerticalStackLayout>-->
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </ScrollView>
</ContentPage>