<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TW.UI.Pages.SpotifyPlaylistsPage"
             Title="SpotifyPlaylistsPage"
             xmlns:viewmodel="clr-namespace:TW.UI.Pages"
             x:DataType="viewmodel:SpotifyPlaylistsPage"
             xmlns:group="clr-namespace:TW.UI.Models.Spotify.View">
    <StackLayout VerticalOptions="FillAndExpand">
    <ListView VerticalOptions="FillAndExpand"
                  IsGroupingEnabled="True"
                  ItemsSource="{Binding Playlists}">
        <ListView.GroupHeaderTemplate>
            <DataTemplate x:DataType="group:SpotifyPlaylistGroup">
                <ViewCell>
                    <Label Text="{Binding Name}"
                               BackgroundColor="LightGray"
                               FontSize="18"
                               FontAttributes="Bold"
                               Padding="10"></Label>
                </ViewCell>
            </DataTemplate>
        </ListView.GroupHeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="group:SpotifyTrackView">
                <TextCell Text="{Binding Name}"
                          Detail="{Binding Artists}"></TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>